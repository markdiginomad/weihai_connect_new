<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <div class="well well_tables">
       <h1>
            Total Members Online </br>
            Total Members Joined </br>
            
            Members
        </h1>
        
        <ul class="list-unstyled">
            <% @users.each do |user| %>
          
             <% if user.profile %>
              
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th></th>
                              <th>Name</th>
                              <th>Hometown</th>
                              <th>Member's Page</th>
                              <th>Friend Request</th>
                          </tr>
                      </thead>
                      <tbody>
                         <tr>
                          <td>
                  <%= image_tag user.profile.avatar.url(:thumb), class: 'user-show-avatar' %>
                          </td>
                          <td>
                        <%= link_to user do %>
       <%= content_tag :span, user.profile.first_name, class: "first_letter_cap" %> <% end %> <%= user.profile.last_name %>
                         </td>
                          <td>
                  <%= content_tag :span, user.profile.hometown, class: "first_letter_cap" %>
                          </td>
                          <td>
                       
                        <%= link_to "My Profile", user, class: 'btn btn-success' %>
                       
                          </td>
                          
                          <td>
                        
                          </td>
                      </tr>
                     </tbody>
                  </table>
              
             <% end %>
            <% end %>
        </ul>
      </div>
  </div>
</div>




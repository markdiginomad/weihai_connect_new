<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
       <h1 class="text-size">Please contact us with any comments here. We will be in touch with you as soon as possible.</h1>
        <%= form_for @contact do |f| %>
    
        <div class="form-group">
          <%= f.label :name %> 
          <%= f.text_field :name, class: 'form-control' %> 
        </div>
         
        <div class="form-group">
          <%= f.label :email %> 
          <%= f.email_field :email, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :comments %> 
          <%= f.text_area :comments, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Submit', class: "font-color" %>
        
        <% end %>
       </div>
      </div>
    </div>
</div>